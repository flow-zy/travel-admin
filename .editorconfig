# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# 设置缩进为 tab 或 space
indent_style = space
# 设置缩进所占列数，如果 indent_style 为 tab，则以 tab_width 值作为缩进宽度
indent_size = 2
# 设置换行符，值为lf、cr和crlf
end_of_line = crlf
#  设置编码，值为latin1、utf-8、utf-8-bom、utf-16be和utf-16le，不建议使用utf-8-bom
charset = utf-8
# 设为 true 表示会去除行尾的空白字符
trim_trailing_whitespace = false
# 设为 true 表示使文件以一个空白行结尾
insert_final_newline = false